                <img src="{{ asset('img/divar3.jpg') }}" alt="ícone" width="40" height="40">
                </a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('produto') }}">Produtos</a>
