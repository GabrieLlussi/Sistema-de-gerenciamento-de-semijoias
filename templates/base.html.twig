                            <a class="nav-link" href="{{ path('categoria') }}">Categorias</a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('regiao') }}">Regiões</a>
                        </li>
                        {% endif %}
                        <li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('dashboard') }}">Dashboard</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href={{ path('registroProdutos') }}>Registro</a>
                            </li>
                        {% endif %}
                        {% if not is_granted ('ROLE_ADMIN') %}
