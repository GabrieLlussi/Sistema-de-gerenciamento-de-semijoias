                            <a class="nav-link" href="{{ path('carrinho') }}">Carrinho</a>
                        </li>
                        {% endif %}
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                        <li>
                            <a class="nav-link" href="{{ path('perfil')}}">Meu perfil</a>
                        </li>
                        {% endif %}

                    </ul>
                    </div>
                    {% if is_granted('ROLE_USER') %}
                        <ul class="navbar-nav ml-auto"> {# Adiciona a classe ml-auto apenas para este bloco #}
                            <li class="nav-item">
                                <a href="{{ path('app_logout') }}" class="btn btn-light">Sair</a>
                            </li>
                        </ul>
                    {% endif %}
                
                

                {% if not is_granted('ROLE_USER') %}
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li> 
                    </ul>
                </div>
                {% endif %}
                </a>
            </div>
        </nav>
        <div class="container">
        {% if is_granted ('ROLE_ADMIN') %}
            
        {% endif %}
        {% block body %}{% endblock %}
