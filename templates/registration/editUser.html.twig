{% extends 'base.html.twig' %}

{% block title %}{{titulo}}{% endblock %}

{% block body %}
    <h1>{{titulo}}</h1>
    <h5>{{subTitulo}}</h5>

    {{ form_errors(form) }}

    {{ form_start(form) }}
        {{ form_row(form.nome) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {
            label: 'Senha'
        }) }}
        {{ form_row(form.endereco) }}
        {{ form_row(form.telefone) }}
        {{ form_row(form.regiao) }}

        {{ form_row(form.agreeTerms) }}

        <button type="submit" class="btn btn-success">{{button}}</button>
    {{ form_end(form) }}
{% endblock %}
