{% extends 'base.html.twig' %}
{% block title %}Registro de Produtos{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4">Registro de Produtos</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ação</th>
                    <th>ID Produto</th>
                    <th>Nome do Produto</th>
                    <th>Valor do Produto</th>
                    <th>Quantidade do Produto</th>
                    <th>Status do Produto</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                {% for logProduto in logProdutos %}
                    <tr>
                        <td>{{ logProduto.acao }}</td>
                        <td>{{ logProduto.produto.id }}</td>
                        <td>{{ logProduto.nomeProduto }}</td>
                        <td>R$ {{ logProduto.valorProduto|number_format(2, ',', '.') }}</td>
                        <td>{{ logProduto.quantidadeProduto }}</td>
                        <td>
                            {% if logProduto.status == 'Ativo' %}
                                <span class="text-success">Ativo</span>
                            {% else %}
                                <span class="text-danger">Inativo</span>
                            {% endif %}
                        </td>
                        <td>{{ logProduto.data|date('d-m-Y H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
